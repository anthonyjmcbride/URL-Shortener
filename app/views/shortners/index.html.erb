<p id="notice"><%= notice %></p>

<h1>Shortners</h1>

<table>
  <thead>
    <tr>
      <th>Longurl</th>
      <th>Shorturl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shortners.each do |shortner| %>
      <tr>
        <td><%= shortner.longurl %></td>
        <td><%= link_to shortner.shorturl, shortner.longurl %></td>
        <td><button><%= link_to 'Show', shortner %></button></td>
        <td><button><%= link_to 'Edit', edit_shortner_path(shortner) %></button></td>
        <td><button><%= link_to 'Destroy', shortner, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Shortner', new_shortner_path %></button>
