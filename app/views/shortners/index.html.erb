<p id="notice"><%= notice %></p>

<h1 class="overlap" >Shortners</h1>

<table>
  <thead>
    <tr>
      <th>Longurl</th>
      <th>Shorturl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shortners.each do |shortner| %>
      <tr>
        <td><%= shortner.longurl %></td>
        <td><%= link_to shortner.shorturl, shortner.longurl %></td>
        <td><%= link_to 'Show', shortner, class: 'show-button' %></td>
        <td><%= link_to 'Edit', edit_shortner_path(shortner), class: 'edit-button' %></td>
        <td><%= link_to 'Delete', shortner, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shortner', new_shortner_path, class: 'new-button' %>
